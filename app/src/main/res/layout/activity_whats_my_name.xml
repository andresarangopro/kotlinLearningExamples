<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstApp.WhatsMyName">

    <Button
            android:text="@string/button_name"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:id="@+id/btnName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/etWeigth"/>
    <TextView
            android:text="Enter your name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etName" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:hint="Name"/>
    <Button
            android:text="Know Weigth"
            android:layout_width="208dp"
            android:layout_height="58dp"
            android:id="@+id/btnWeigth"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.534" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etWeigth" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/etName" android:hint="Weigth"
            app:layout_constraintHorizontal_bias="0.521"/>
    <TextView
            android:text="WEIGTH IN OTHER PLANET"
            android:layout_width="184dp"
            android:layout_height="47dp"
            android:id="@+id/tvWeigth"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btnWeigth"/>
    <Button
            android:text="go back"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:id="@+id/btnBackMenu" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWeigth" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>