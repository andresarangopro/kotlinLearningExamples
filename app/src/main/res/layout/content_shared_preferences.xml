<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
                <TextView android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.3" android:id="@+id/tvWhatever"
                android:hint="SOMEWHERE"/>
                <EditText android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.3" android:id="@+id/etWhateverOne"
                android:hint="SOME ONE"/>
                <EditText android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="0.3" android:id="@+id/etWhateverTwo"
                  android:hint="SOME TWO"/>
                <EditText android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.3" android:id="@+id/etWhateverThree"
                android:hint="SOME THREE"/>

                <Button android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.3" android:id="@+id/btnWhatever"
                android:text="SAVE" android:onClick="onClick"/>

              <Button android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.3" android:id="@+id/btnNextWhatever"
                android:text="NEXT" android:onClick="onClick"/>


</LinearLayout>