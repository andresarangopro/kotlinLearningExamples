<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
            android:text="Vegetables"
            android:layout_width="163dp"
            android:layout_height="63dp"
            android:onClick="onCheckBoxClicked"
            android:id="@+id/chbVegetables" android:layout_marginTop="72dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <CheckBox
            android:text="Fruits"
            android:layout_width="163dp"
            android:layout_height="62dp"
            android:onClick="onCheckBoxClicked"
            android:id="@+id/chBFruits" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/chbVegetables" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
    />
    <CheckBox
            android:text="GROSSERIES"
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:onClick="onCheckBoxClicked"
            android:id="@+id/chBGrossers" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/chBFruits" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.473"/>
    <Button
            android:text="Splash"
            android:layout_width="237dp"
            android:layout_height="94dp"
            android:id="@+id/btnSplash" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/chBGrossers"/>


</android.support.constraint.ConstraintLayout>